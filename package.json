{
  "name": "ephemeral-text",
  "version": "1.0.0",
  "description": "textEdit alternative for Mac Os that doesn't save files, and doesn't ask any questions.",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm run watch:css\" \"electron .\"",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/tailwind.css --minify",
    "watch:css": "tailwindcss -i ./src/input.css -o ./public/tailwind.css --watch",
    "dev": "concurrently \"npm run watch:css\" \"electron .\"",
    "build": "electron-builder",
    "dist": "electron-builder --mac"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.1.0",
    "electron": "^33.2.1",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1",
    "tailwindcss": "^3.4.16"
  },
  "dependencies": {
    "@shadcn/ui": "^0.0.4",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "easymde": "^2.18.0",
    "marked": "^15.0.4",
    "postcss": "^8.4.49",
    "tailwind-merge": "^2.5.5"
  },
  "build": {
    "appId": "com.ephemtext.app",
    "productName": "Ephemeral Text",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "ephemeral-text.png",
      "target": [
        "dmg",
        "zip"
      ],
      "darkModeSupport": true
    }
  }
}
